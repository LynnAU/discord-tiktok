{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "core/*": ["*"],
      "types/*": ["types/*"]
    },
    "module": "commonjs",
    "target": "ES2017",
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2020", "es2017", "esnext.asynciterable"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "typeRoots": ["./src/types/public", "./node_modules/@types"]
  },
  "exclude": ["node_modules", "src/types/public"]
}
